<div class="contain-to-grid">
  <nav class="top-bar" data-options="is_hover:false">
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name">
        <h1><%= link_to image_tag("logo-episco+-glow.png", :border => 0, :id => 'logo'), root_path %> </h1></li>
      <% if signed_in? %>
          <li class="toggle-topbar menu-icon"><a><span>Menu</span></a></li>
      <% end %>
    </ul>

    <% if signed_in? %>

        <section class="top-bar-section">
          <!-- Left Nav Section -->
          <ul class="left">
            <li class="divider"></li>
            <li><%= link_to "Omelie", sermons_path %></li>
            <li class="divider"></li>
            <li><%= link_to 'Breviario', root_path %></li>
            <li class="divider"></li>

          </ul>

          <!-- Right Nav Section -->
          <ul class="right">
            <li class="divider hide-for-small "></li>
            <li>
              <%= link_to root_path do %>
                  <%= image_tag("icon/bell.png") %>
                  <span class="hide-for-large-up">Notifiche</span>
              <% end %>
            </li>
            <li class="divider"></li>
            <li class="with-notify">
              <%= link_to messages_path do %>
                  <%= image_tag("icon/mail2.png") %>
                  <span class="hide-for-large-up">Messaggi</span>
                  <% if current_user.unread_messages? %>
                      <span class="notify" id="messages-notify"><%= current_user.unread_message_count %></span>
                  <% end %>
              <% end %>
            </li>
            <li class="divider"></li>

            <li>
              <%= link_to current_user do %>
                  <%= gravatar_for current_user, size: 25 %>
                  <%= current_user.honorific %> <%= current_user.name %> <%= current_user.surname %>
              <% end %>
            </li>

            <li class="has-dropdown settings"><a class="icon-anchor">Impostazioni</a>
              <ul class="dropdown">
                <li><%= link_to "Esci", signout_path, method: "delete" %></li>
              </ul>
            </li>

            <li class="divider"></li>
            <li class="has-form top-search"><%= render 'pages/search_form' %></li>
            <li class="divider show-for-small"></li>

          </ul>
        </section>

    <% end %>
  </nav>
</div>