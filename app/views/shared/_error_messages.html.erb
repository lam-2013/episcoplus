<% # handle and show forms errors    %>
<% if @user.errors.any? %>
    <div data-alert class="alert-box error">
      Il form contiene <%= pluralize(@user.errors.count, "errore", "errori") %>.
      <ul>
        <% @user.errors.full_messages.each do |message| %>
            <%# TODO spostare style nel css %>
            <li style="margin-left: 20px;"><%= message %></li>
        <% end %>
      </ul>
      <%= link_to image_tag("icon/close.png"), "#", :class => "close" %>
    </div>
<% end %>