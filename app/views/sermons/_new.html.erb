<div class="row collapse">
  <%= form_for(@sermon, :html => {:class => "custom"}) do |f| %>

      <%= f.text_field :title, placeholder: 'Titolo', :required => "required" %>
      <%= f.text_field :subtitle, placeholder: 'Sottotitolo' %>

      <div class="row collapse">
        <div class="columns large-8">
          <%= f.text_field :type_of_liturgy, placeholder: 'Tipo di Liturgia' %>
        </div>
        <div class="columns large-4">
          <%= f.text_field :day, :type => :date, :class => 'datepicker', placeholder: 'gg/mm/aaaa' %>
        </div>
      </div>

      <div class="row collapse">
        <div class="columns large-1 large-offset-1">

          <%= f.select :audio, options_for_select([["Video", :video], ["Audio", :audio]], {:include_blank => 'carica un file multimediale'} ), html_options = {:class=>"medium dropdown"}  %>
        </div>
        <div class="small-9 large-10 columns">

              <%= f.text_field :audio, :type => "url", placeholder: 'inserisci url audio' %>
        </div>
      </div>

      <%= f.text_area :content, placeholder: 'Scrivi la tua omelia', :required => "required" %>


      <%= f.text_field :tag_list, :id => 'tags', placeholder: 'Di cosa parla? (separa le parole con una virgola)' %>

      <%= f.submit "Pubblica", :class => 'button small radius' %>
  <% end %>

</div>