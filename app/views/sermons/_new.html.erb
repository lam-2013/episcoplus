<div class="row collapse">
  <%= form_for(@sermon) do |f| %>

      <%= f.text_field :title, placeholder: 'Titolo' %>
      <%= f.text_field :subtitle, placeholder: 'Sottotitolo' %>

      <div class="columns large-4">
        <%= f.text_field :type_of_liturgy, placeholder: 'Tipo di Liturgia' %>
      </div>
      <div class="columns large-4">
        <%= f.text_field :day, :type => :date, :class => 'datepicker', placeholder: 'gg/mm/aaaa' %>
      </div>

      <%= f.text_area :content, placeholder: 'Scrivi la tua omelia' %>

      <%= f.text_field :tag_list, placeholder: 'Di cosa parla? (separa le parole con una virgola)' %>

      <%= f.submit "Pubblica", :class => 'button small radius' %>
  <% end %>

</div>